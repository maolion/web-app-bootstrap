{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "newLine": "LF",
    "rootDir": "./src",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "src/**/*.1.ts"
  ]
}
